<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Mall">
	<insert id="join"
		parameterType="com.codingbox.DTO.UserDTO">
		INSERT INTO USERS
		VALUES (#{userid}, #{userpw}, #{user_name}, #{usertel}, #{email}, sysdate, default)
	</insert>
	
	<!-- 로그인 -->
	<select id="login" parameterType="hashmap" resultType="com.codingbox.DTO.UserDTO">
		SELECT * FROM USERS
		WHERE USER_ID = #{userid} AND USER_PWD = #{userpw}
	</select>
	
	<select id="checkId" parameterType="string" resultType="_int">
		SELECT count(*) FROM USERS
		WHERE USER_ID = #{userid}
	</select>

	<!-- 후기 -->
	<insert id="addReply" parameterType="replydto">
		INSERT INTO productReivews VALUES
		(productReivews_seq.nextval, #{user_id}, #{pr_content}, sysdate)
	</insert>
	
	<select id="getReplys" parameterType="_int"
		resultType="replydto">
		SELECT * FROM productReivews WHERE pr_key = #{pr_key}
	</select>
	
	<select id="updateReply" parameterType="hashmap">
		UPDATE productReivews SET REPLYCONTENT = #{pr_content}
		WHERE pr_key = #{pr_key}
	</select>
	
	<delete id="deleteReply" parameterType="_int">
		DELETE FROM productReivews WHERE pr_key = #{pr_key}
	</delete>
	
	<!-- 결제 -->
	<insert id="order" parameterType="orderdto">
		INSERT INTO totalOrder
		VALUES (totalOrder_seq.NEXTVAL, #{user_id}, #{prod_key}, #{order_cnt}, #{order_price}, #{order_name},
		 #{order_zipcode}, #{order_addr}, #{order_addr_detail}, #{order_tel}, #{order_req}, sysdate )
			
	</insert>	
</mapper>










